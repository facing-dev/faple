{
    "compilerOptions": {
        "target": "ES6",
        "baseUrl": "../src",
        "rootDir": "../src",
        "strict": true,
        "sourceMap": true,
        "lib": [
            "ES6",
            "DOM",
            "DOM.Iterable"
        ],
        "esModuleInterop": true,
        "isolatedModules": true,
        "emitDeclarationOnly": false,
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noEmit": false
    },
    "files": [
        "../src/index.mts",
        "../src/vdom/jsx-runtime.mts"
    ]
}